    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Armazenar dados dos clones em JavaScript para acesso rápido
        // eslint-disable-next-line
        const clonesDataRaw = <%- JSON.stringify(files ? files.reduce((acc, file) => {
            acc[file.name] = {
                name: file.name,
                projectName: file.projectName || null,
                size: file.size,
                created: file.created.toISOString(),
                url: file.url,
                originalUrl: file.originalUrl || '',
                publishInfo: file.publishInfo || null
            };
            return acc;
        }, {}) : {}) %>;
        const clonesData = clonesDataRaw || {};

        // Menu Navigation
        function showSection(section, event) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(s => s.style.display = 'none');
            
            // Remove active from all menu items
            document.querySelectorAll('.menu-item').forEach(i => i.classList.remove('active'));
            
            // Show selected section
            const sectionElement = document.getElementById(section + 'Section');
            if (sectionElement) {
                sectionElement.style.display = 'block';
            }
            
            // Add active to clicked menu item (if clicked from menu)
            if (event && event.target) {
                const menuItem = event.target.closest('.menu-item');
                if (menuItem) {
                    menuItem.classList.add('active');
                } else {
                    // If clicked from button, activate corresponding menu item
                    const menuItems = document.querySelectorAll('.menu-item');
                    menuItems.forEach(item => {
                        if (item.getAttribute('onclick') && item.getAttribute('onclick').includes(`'${section}'`)) {
                            item.classList.add('active');
                        }
                    });
                }
            }
        }

        // Mostrar detalhes do clone (tela individual)
        function showCloneDetail(filename) {
            const cloneData = clonesData[filename];
            if (!cloneData) {
                showAlert('Clone não encontrado', 'danger');
                return;
            }

            // Esconder todas as seções
            document.querySelectorAll('.content-section').forEach(s => s.style.display = 'none');
            
            // Mostrar seção de detalhes
            const detailSection = document.getElementById('cloneDetailSection');
            detailSection.style.display = 'block';

            // Preencher título com nome do projeto editável
            const displayName = cloneData.projectName || cloneData.name;
            // Escapar valor para uso em atributo onclick (escapar aspas simples)
            // Se projectName for null ou undefined, usar string vazia
            const projectNameValue = cloneData.projectName || '';
            const escapedProjectName = String(projectNameValue).replace(/\\/g, '\\\\').replace(/'/g, "\\'");
            const projectNameForOnClick = `'${escapedProjectName}'`;
            document.getElementById('cloneDetailTitle').innerHTML = `
                <div class="project-name-editable-container" id="projectNameContainer_${cloneData.name}">
                    <div class="project-name-display-container">
                        <i class="fas fa-file-code me-2"></i>
                        <span class="project-name-display" id="projectNameDisplay_${cloneData.name}">${displayName}</span>
                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2" onclick="editProjectName('${cloneData.name}', ${projectNameForOnClick})" id="editProjectNameBtn_${cloneData.name}">
                            <i class="fas fa-edit me-1"></i> Editar
                        </button>
