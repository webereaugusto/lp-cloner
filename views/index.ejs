            <% if (files && files.filter(f => f.publishInfo).length > 0) { %>
                <% files.filter(f => f.publishInfo).forEach(file => { %>
                    <div class="file-card fade-in">
                        <div class="status-switch-container">
                            <label class="status-switch">
                                <input type="checkbox" checked onchange="togglePublishStatus('<%= file.name %>', this.checked)" id="switch_<%= file.name %>">
                                <span class="status-slider"></span>
                            </label>
                            <span class="status-label published" id="label_<%= file.name %>">Publicado</span>
