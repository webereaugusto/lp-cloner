        <!-- Files Section -->
        <div id="filesSection" class="content-section fade-in" style="display: none;">
            <h2 class="section-title">
                <i class="fas fa-folder-open"></i>
                Clones Salvos
            </h2>
            <% if (files && files.length > 0) { %>
                <div id="filesList">
                    <% files.forEach(file => { %>
                        <div class="file-card fade-in" id="card_<%= file.name %>">
