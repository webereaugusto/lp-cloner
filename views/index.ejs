                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">URL Original:</small>
                                    <a href="<%= file.originalUrl %>" target="_blank" class="url-pill" title="<%= file.originalUrl %>">
                                        <%= file.originalUrl %>
                                    </a>
                                </div>
                            <% } %>

                            <!-- URL Pública Destacada -->
                            <div class="public-url-highlight mb-3" id="publicUrl_<%= file.name %>">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    <i class="fas fa-globe" style="color: var(--primary);"></i>
                                    <small class="text-muted fw-bold">URL Pública:</small>
                                </div>
                                <% if (file.publishInfo) { %>
                                    <div class="public-url-box">
                                        <a href="<%= file.publishInfo.publicUrl %>" target="_blank" class="public-url-link">
                                            <i class="fas fa-external-link-alt me-2"></i>
                                            <%= file.publishInfo.publicUrl %>
                                        </a>
                                        <button class="copy-url-btn" onclick="copyToClipboard('<%= file.publishInfo.publicUrl %>')" title="Copiar URL">
                                            <i class="fas fa-copy"></i>
