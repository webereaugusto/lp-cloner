        // Calcular tempo relativo (ex: "Criado há 2 horas, 30 min")
        function getRelativeTime(dateString) {
            const now = new Date();
            const created = new Date(dateString);
            const diffMs = now - created;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMins / 60);
            const diffDays = Math.floor(diffHours / 24);

            if (diffDays > 0) {
                return `Criado há ${diffDays} ${diffDays === 1 ? 'dia' : 'dias'}`;
            } else if (diffHours > 0) {
                const remainingMins = diffMins % 60;
                if (remainingMins > 0) {
                    return `Criado há ${diffHours} ${diffHours === 1 ? 'hora' : 'horas'}, ${remainingMins} ${remainingMins === 1 ? 'min' : 'min'}`;
                }
                return `Criado há ${diffHours} ${diffHours === 1 ? 'hora' : 'horas'}`;
            } else if (diffMins > 0) {
                return `Criado há ${diffMins} ${diffMins === 1 ? 'minuto' : 'minutos'}`;
            } else {
                return 'Criado agora';
            }
        }

        // Gerar gráfico de barras simples (estilo UptimeRobot)
        function generateUptimeBars(status) {
            const isPublished = status === 'published';
            const barsCount = 20; // Número de barras
            let html = '';

            // Para publicados, todas as barras são verdes
            // Para rascunhos, algumas barras são cinzas (simula menor "uptime")
            if (isPublished) {
                for (let i = 0; i < barsCount; i++) {
                    html += '<div class="uptime-bar"></div>';
                }
            } else {
                // Para rascunhos, mostrar algumas barras inativas
                const activeBars = Math.floor(barsCount * 0.7); // 70% ativas
                for (let i = 0; i < barsCount; i++) {
                    if (i < activeBars) {
                        html += '<div class="uptime-bar"></div>';
                    } else {
                        html += '<div class="uptime-bar inactive"></div>';
                    }
                }
            }

            return html;
        }

