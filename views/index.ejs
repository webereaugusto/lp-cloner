            </div>

            <!-- Clones List (UptimeRobot Style) -->
            <div class="clones-list-container">
                <div class="clones-list-header">
                    <h2>
                        <i class="fas fa-list"></i>
                        Clones
                    </h2>
                    <div class="clones-list-controls">
                        <div class="clones-list-search">
                            <i class="fas fa-search"></i>
