                        </div>
                    </div>
                </div>
                <div id="clonesListBody">
                    <% if (files && files.length > 0) { %>
                        <% files.forEach(file => { %>
                            <div class="clone-item" data-clone-name="<%= file.name.toLowerCase() %>" data-clone-url="<%= (file.originalUrl || '').toLowerCase() %>">
                                <div class="clone-status-indicator <%= file.publishInfo ? 'published' : 'draft' %>"></div>
                                <div class="clone-main-info">
                                    <div class="clone-name"><%= file.projectName ? file.projectName : file.name %></div>
                                    <% if (file.originalUrl) { %>
                                        <div class="clone-url-original" title="<%= file.originalUrl %>"><%= file.originalUrl %></div>
                                    <% } else { %>
                                        <div class="clone-url-original text-muted">Sem URL original</div>
                                    <% } %>
                                </div>
                                <div class="clone-details">
                                    <div class="clone-uptime">
                                        <span class="clone-uptime-text" data-created="<%= file.created %>"></span>
                                        <div class="clone-uptime-graph" data-status="<%= file.publishInfo ? 'published' : 'draft' %>"></div>
                                    </div>
                                    <div class="clone-stats">
                                        <div class="clone-stat-item">
                                            <span class="clone-stat-label">Status</span>
                                            <span class="clone-stat-value <%= file.publishInfo ? 'text-success' : 'text-muted' %>">
                                                <%= file.publishInfo ? 'Publicado' : 'Rascunho' %>
                                            </span>
                                        </div>
                                        <div class="clone-stat-item">
                                            <span class="clone-stat-label">Tamanho</span>
                                            <span class="clone-stat-value"><%= (file.size / 1024).toFixed(1) %> KB</span>
                                        </div>
                                        <% if (file.publishInfo) { %>
                                            <div class="clone-stat-item">
                                                <span class="clone-stat-label">Uptime</span>
                                                <span class="clone-stat-value text-success">100%</span>
                                            </div>
